<div class="flex flex-col items-center py-10 gap-4">
  <h1 class="text-xl font-bold">New Comment</h1>
  <%= form_with model: Comment, url: user_post_comments_path(user_id: params[:user_id], post_id: params[:post_id]), method: :post, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :text, class: "hidden" %>
      <%= f.text_field :text, class: 'h-[5rem]' %>
    </div>
    <div class="border-2 border-black w-min py-1 px-2 text-sm">
      <%= f.submit "Create Comment" %>
    </div>
  <% end %>
</div>
