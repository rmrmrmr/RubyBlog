<section class="flex flex-col gap-4 h-screen pt-0 mt-5 px-5">
  <%= render 'partials/user', user: @user %>
  <% @user.posts.each do |post| %>
    <%= render partial:'partials/post', locals: { post: post } %>
    <div class="h-[14%] border-2 border-black px-3 py-1 text-[0.6rem] flex flex-col justify-between mt-[-0.95rem]">
      <% post.comments.each do |comment| %>
        <%= render "partials/comments", comment: comment %>
    <% end %>
    </div>
  <% end %>
  <%= link_to 'Pagination', :back, class: 'border-2 border-black w-2/6 py-1 text-center self-center text-sm' %>
</section>