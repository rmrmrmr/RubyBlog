<%= form_with model: @post, url: user_posts_path, local: true, scope: :post do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
    <div>
    <%= f.label :text %><br>
    <%= f.text_field :text %>
  </div>
  <div>
    <%= f.submit "Create Post" %>
  </div>
<% end %>