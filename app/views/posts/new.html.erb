<div class="flex flex-col items-center py-10 gap-4">
  <h1 class="text-xl font-bold">New Post</h1>
  <%= form_with model: @post, url: user_posts_path, local: true, scope: :post do |f| %>
    <div class="mb-3 font-semibold">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
      <div class="mb-3 font-semibold">
      <%= f.label :text %><br>
      <%= f.text_field :text %>
    </div>
    <div class="border-2 border-black w-min py-1 px-2 text-sm">
      <%= f.submit "Create Post" %>
    </div>
  <% end %>
</div>